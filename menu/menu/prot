#!/bin/bash

# ==========================================================
#  TOMATO LUXE THEME ENGINE - PORT INFO
# ==========================================================

# 1. Palette Definition (True Color)
C_TOMATO="\033[38;2;217;69;57m"   # Primary Red
C_BURGUNDY="\033[38;2;143;38;38m" # Border Red
C_SAGE="\033[38;2;148;180;159m"   # Success Green
C_GOLD="\033[38;2;230;203;165m"   # Warning/Highlight
C_CREAM="\033[38;2;253;251;247m"  # Text
C_RESET="\033[0m"

# 2. Icons
ICON_TOMATO="🍅"
ICON_SSH="🚀"
ICON_VPN="🛡️"
ICON_XRAY="🌌"
ICON_SYS="⚙"
ICON_NET="🌐"
ICON_STAR="✨"

# ==========================================================
#  HELPER FUNCTIONS
# ==========================================================

draw_header() {
    clear
    echo -e "${C_BURGUNDY}╔══════════════════════════════════════════════════════╗${C_RESET}"
    echo -e "${C_BURGUNDY}║${C_RESET} ${C_SAGE}${ICON_TOMATO}    ${C_TOMATO}TOMATO INFO${C_RESET} ${C_GOLD}(PORT SERVICE)${C_RESET}                 ${C_BURGUNDY}║${C_RESET}"
    echo -e "${C_BURGUNDY}╠══════════════════════════════════════════════════════╣${C_RESET}"
    echo -e "${C_BURGUNDY}║${C_RESET} ${C_GOLD}${ICON_STAR} AUTHOR : ${C_CREAM}DUDUL (TEA V.1.0)${C_RESET}                   ${C_BURGUNDY}║${C_RESET}"
    echo -e "${C_BURGUNDY}╚══════════════════════════════════════════════════════╝${C_RESET}"
    echo -e ""
}

# ==========================================================
#  MAIN DISPLAY
# ==========================================================

draw_header

echo -e "${C_BURGUNDY}╔══════════════════════════════════════════════════════╗${C_RESET}"
echo -e "${C_BURGUNDY}║${C_RESET} ${C_GOLD}%-20s${C_RESET}   ${C_SAGE}%-27s${C_RESET} ${C_BURGUNDY}║${C_RESET}" "SERVICE NAME" "ACTIVE PORTS"
echo -e "${C_BURGUNDY}╠══════════════════════════════════════════════════════╣${C_RESET}"

# --- SSH & TUNNELING ---
echo -e "${C_BURGUNDY}║${C_RESET} ${C_TOMATO}${ICON_SSH} SSH & TUNNEL${C_RESET}                                       ${C_BURGUNDY}║${C_RESET}"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Open SSH" "443, 80, 22"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Dropbear" "443, 109, 143"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Dropbear WS" "443, 109"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "SSH WS SSL" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "SSH WS HTTP" "80"

echo -e "${C_BURGUNDY}╠══════════════════════════════════════════════════════╣${C_RESET}"

# --- OPENVPN ---
echo -e "${C_BURGUNDY}║${C_RESET} ${C_TOMATO}${ICON_VPN} OPENVPN${C_RESET}                                            ${C_BURGUNDY}║${C_RESET}"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "OVPN SSL" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "OVPN WS SSL" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "OVPN TCP" "443, 1194"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "OVPN UDP" "2200"

echo -e "${C_BURGUNDY}╠══════════════════════════════════════════════════════╣${C_RESET}"

# --- XRAY / V2RAY ---
echo -e "${C_BURGUNDY}║${C_RESET} ${C_TOMATO}${ICON_XRAY} XRAY CORE${C_RESET}                                          ${C_BURGUNDY}║${C_RESET}"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Vmess TLS" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Vmess gRPC" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Vmess None TLS" "80"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Vless TLS" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Vless gRPC" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Vless None TLS" "80"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Trojan WS/gRPC" "443"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Shadowsocks WS" "443"

echo -e "${C_BURGUNDY}╠══════════════════════════════════════════════════════╣${C_RESET}"

# --- SYSTEM & WEB ---
echo -e "${C_BURGUNDY}║${C_RESET} ${C_TOMATO}${ICON_SYS} SYSTEM & WEB${C_RESET}                                       ${C_BURGUNDY}║${C_RESET}"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Nginx Webserver" "443, 80, 81"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "Haproxy L-Balancer" "443, 80"
printf "${C_BURGUNDY}║${C_RESET} ${C_CREAM}%-22s${C_RESET} : ${C_SAGE}%-25s${C_RESET} ${C_BURGUNDY}║${C_RESET}\n" "BadVPN UDP GW" "7100, 7200, 7300"
echo -e "${C_BURGUNDY}╚══════════════════════════════════════════════════════╝${C_RESET}"

echo -e ""
read -n 1 -s -r -p "Press any key to return..."
menu