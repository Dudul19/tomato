#!/bin/bash

# ==========================================================
#  TOMATO LUXE THEME ENGINE - SESSION MONITOR
# ==========================================================

# 1. Palette Definition (True Color)
C_TOMATO="\033[38;2;217;69;57m"   # Primary Red
C_BURGUNDY="\033[38;2;143;38;38m" # Border Red
C_SAGE="\033[38;2;148;180;159m"   # Success Green
C_GOLD="\033[38;2;230;203;165m"   # Warning/Highlight
C_CREAM="\033[38;2;253;251;247m"  # Text
C_RESET="\033[0m"

# 2. Icons
ICON_TOMATO="ðŸ…"
ICON_USER="ðŸ‘¤"
ICON_SSH="ðŸš€"
ICON_DB="ðŸ"
ICON_VPN="ðŸ›¡ï¸"
ICON_ACTIVE="ðŸ”¥"
ICON_LIST="ðŸ“‹"
ICON_STAR="âœ¨"

# ==========================================================
#  HELPER FUNCTIONS
# ==========================================================

draw_header() {
    clear
    echo -e "${C_BURGUNDY}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${C_RESET}"
    echo -e "${C_BURGUNDY}â•‘${C_RESET} ${C_SAGE}${ICON_TOMATO}    ${C_TOMATO}TOMATO MONITOR${C_RESET} ${C_GOLD}(ACTIVE SESSIONS)${C_RESET}          ${C_BURGUNDY}â•‘${C_RESET}"
    echo -e "${C_BURGUNDY}â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£${C_RESET}"
    echo -e "${C_BURGUNDY}â•‘${C_RESET} ${C_GOLD}${ICON_STAR} AUTHOR : ${C_CREAM}DUDUL (TEA V.1.0)${C_RESET}                   ${C_BURGUNDY}â•‘${C_RESET}"
    echo -e "${C_BURGUNDY}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${C_RESET}"
    echo -e ""
}

# Determine Log File
if [ -e "/var/log/auth.log" ]; then
    LOG="/var/log/auth.log"
elif [ -e "/var/log/secure" ]; then
    LOG="/var/log/secure"
else
    echo -e "${C_TOMATO}Error: Log file not found!${C_RESET}"
    exit 1
fi

draw_header

# ==========================================================
#  DROPBEAR SESSIONS
# ==========================================================
echo -e "${C_BURGUNDY}  .----------------------------------------------------.${C_RESET}"
echo -e "${C_BURGUNDY}  |${C_RESET}              ${C_SAGE}${ICON_DB} DROPBEAR SESSIONS${C_RESET}                 ${C_BURGUNDY}|${C_RESET}"
echo -e "${C_BURGUNDY}  '----------------------------------------------------'${C_RESET}"
printf "  ${C_GOLD}%-6s %-15s %-18s %-8s${C_RESET}\n" "PID" "User" "IP Address" "Status"
echo -e "${C_BURGUNDY}  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${C_RESET}"

data=( `ps aux | grep -i dropbear | awk '{print $2}'`)
cat $LOG | grep -i dropbear | grep -i "Password auth succeeded" > /tmp/login-db.txt

found_db=0
for PID in "${data[@]}"; do
    if grep -q "dropbear\[$PID\]" /tmp/login-db.txt; then
        # Ambil baris terakhir yang cocok
        line=$(grep "dropbear\[$PID\]" /tmp/login-db.txt | tail -n 1)
        USER=$(echo $line | awk '{print $10}')
        IP=$(echo $line | awk '{print $12}')
        printf "  ${C_CREAM}%-6s %-15s %-18s ${C_SAGE}%-8s${C_RESET}\n" "$PID" "$USER" "$IP" "Active"
        found_db=1
    fi
done

if [[ $found_db -eq 0 ]]; then
    echo -e "  ${C_CREAM}No active Dropbear sessions.${C_RESET}"
fi
echo -e ""

# ==========================================================
#  OPENSSH SESSIONS
# ==========================================================
echo -e "${C_BURGUNDY}  .----------------------------------------------------.${C_RESET}"
echo -e "${C_BURGUNDY}  |${C_RESET}               ${C_SAGE}${ICON_SSH} OPENSSH SESSIONS${C_RESET}                  ${C_BURGUNDY}|${C_RESET}"
echo -e "${C_BURGUNDY}  '----------------------------------------------------'${C_RESET}"
printf "  ${C_GOLD}%-6s %-15s %-18s %-8s${C_RESET}\n" "PID" "User" "IP Address" "Status"
echo -e "${C_BURGUNDY}  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${C_RESET}"

cat $LOG | grep -i sshd | grep -i "Accepted password for" > /tmp/login-db.txt
data=( `ps aux | grep "sshd: " | grep -v grep | awk '{print $2}'`)

found_ssh=0
for PID in "${data[@]}"; do
    if grep -q "sshd\[$PID\]" /tmp/login-db.txt; then
        line=$(grep "sshd\[$PID\]" /tmp/login-db.txt | tail -n 1)
        USER=$(echo $line | awk '{print $9}')
        IP=$(echo $line | awk '{print $11}')
        printf "  ${C_CREAM}%-6s %-15s %-18s ${C_SAGE}%-8s${C_RESET}\n" "$PID" "$USER" "$IP" "Active"
        found_ssh=1
    fi
done

if [[ $found_ssh -eq 0 ]]; then
    echo -e "  ${C_CREAM}No active OpenSSH sessions.${C_RESET}"
fi
echo -e ""

# ==========================================================
#  OPENVPN SESSIONS
# ==========================================================
if [ -f "/etc/openvpn/server/openvpn-tcp.log" ] || [ -f "/etc/openvpn/server/openvpn-udp.log" ]; then
    echo -e "${C_BURGUNDY}  .----------------------------------------------------.${C_RESET}"
    echo -e "${C_BURGUNDY}  |${C_RESET}               ${C_SAGE}${ICON_VPN} OPENVPN SESSIONS${C_RESET}                  ${C_BURGUNDY}|${C_RESET}"
    echo -e "${C_BURGUNDY}  '----------------------------------------------------'${C_RESET}"
    printf "  ${C_GOLD}%-15s %-18s %-15s${C_RESET}\n" "User" "IP Address" "Connected"
    echo -e "${C_BURGUNDY}  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${C_RESET}"
    
    found_vpn=0
    
    # TCP
    if [ -f "/etc/openvpn/server/openvpn-tcp.log" ]; then
        grep "^CLIENT_LIST" /etc/openvpn/server/openvpn-tcp.log | grep -v "Common Name" | while IFS=, read -r _ user ip _ _ _ _ since _; do
            printf "  ${C_CREAM}%-15s %-18s %-15s${C_RESET}\n" "$user" "${ip%:*}" "$since"
            found_vpn=1
        done
    fi
    
    # UDP
    if [ -f "/etc/openvpn/server/openvpn-udp.log" ]; then
        grep "^CLIENT_LIST" /etc/openvpn/server/openvpn-udp.log | grep -v "Common Name" | while IFS=, read -r _ user ip _ _ _ _ since _; do
            printf "  ${C_CREAM}%-15s %-18s %-15s${C_RESET}\n" "$user" "${ip%:*}" "$since"
            found_vpn=1
        done
    fi

    if [[ $found_vpn -eq 0 ]]; then
        echo -e "  ${C_CREAM}No active OpenVPN sessions.${C_RESET}"
    fi
    echo -e ""
fi

# ==========================================================
#  SUMMARY
# ==========================================================
total_users=$(who | wc -l)
echo -e "${C_BURGUNDY}  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${C_RESET}"
echo -e "  ${C_GOLD}${ICON_ACTIVE} Total System Users :${C_RESET} ${C_SAGE}$total_users${C_RESET}"
echo -e ""

# Cleanup
rm -f /tmp/login-db.txt

read -n 1 -s -r -p "Press any key to return..."
menu